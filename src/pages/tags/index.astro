---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../posts/*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const pageTitle = "**BLOG TAGS**";
---

<BaseLayout pageTitle={pageTitle}>
  <p>Filter blog posts by tag</p>
  <div class="tags">
    {
      tags.map((tag) => (
        <a href={`/tags/${tag}`}>
          <p class="tag">{tag}</p>
        </a>
      ))
    }
  </div>
</BaseLayout>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
  }

  a {
    border: 1px dashed #395234;
  }

  a:hover {
    border: 1px dashed #4af626;
  }
</style>
