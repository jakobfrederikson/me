---
import BaseLayout from "../layouts/BaseLayout.astro";
import Projects from "../data/projects.json";
import Card from "../components/Card.astro";
const pageTitle = "**ME**";
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Hello, I'm Jakob Frederikson, a software engineer graduate. I currently work
    for Inland Revenue (IR) as a Customer Service Officer, starting a new
    Service Desk role with IR on 09 December 2024.
  </p>
  <h2>**MY PROJECTS**</h2>
  <hr />
  {
    Projects.map((project) => (
      <Card
        name={project.name}
        description={project.description}
        imagePath={project.image}
        altText={project.altText}
        url={project.link}
      />
    ))
  }
</BaseLayout>
